{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Voici les informations détaillé de ce produit ✅</h1>
    <div>
    <div>
        <h3>{{product.title}}</h3>
        
        <p>{{product.description}}</p>
        <p>{{product.price}}</p>
        <p>{{product.quantity}}</p>
        <p>date de création :{{product.createdAt|date}}</p>
        <p>date de modification :{{product.updatedAt|date}}</p>

        {% if product.seller %}
        <p>Auteur :{{product.seller.name}}</p>
        {% endif %}
    </div>
    </div>
</div>
{% endblock %}
