<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <header>
     <nav>
            <a href="{{ path('app_home') }}">Home</a>
            {% if app.user %}
                <a href="{{ path('app_profile',{'id' : app.user.id}) }}">Profile</a>
                <a href="{{ path('app_logout') }}">Logout</a>
            {% else %}
            <a href="{{ path('app_home_products') }}">Products</a>
                <a href="{{ path('app_register') }}">Register</a>
                <a href="{{ path('app_login') }}">Sign in</a>
            {% endif %}

            {% if app.user %}
            {% if 'ROLE_ADMIN' in app.user.roles %}
            
            <a class="link_client_admin" href="{{ path('app_admin') }}">Go admin side</a>
            <div class="admin_alert">
                <h3>
                Vous etes connecté en tant que administrateur
                </h3>
            </div>            
            {% endif %}
        {% endif %}
           
        </nav>
        
        
    </header>
    
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
