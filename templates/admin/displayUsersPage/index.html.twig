{% extends 'base.admin.html.twig' %}

{% block title %}Hello AdminUserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Rechercher des utilisateurs ✅</h1>
    <h3 class='mark'>Enter "client" our "vendeur"</h3>
    {{ include('content/_form.html.twig') }}
    <ul class="bloc_card_product">
        {% for user in users %}
        <div class="card_product">
            <li><span>Name:</span> {{user.name}}</li>
            <div class="card_product_details">
                <p><span>Firstname:</span> {{user.firstname}}</p>
                <p><span>Statut : </span>{{user.statut}} €</p>
            </div>
        {% endfor %}
    </ul>


</div>
{% endblock %}
